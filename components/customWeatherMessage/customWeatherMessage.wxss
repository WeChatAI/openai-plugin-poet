.answer{
  margin: 10px 0;
  padding: 10px 18px;
  background:rgba(255,255,255,1);
  color:rgba(48,49,51,1);
  border-radius:5px;
  max-width: calc(96vw - 120px);
  font-size: 13px;
  line-height: 18px;
  overflow:hidden;
   word-wrap:break-word;
  text-align: justify;
  box-shadow:0px 3px 8px 0px rgba(219,235,249,0.51);
  border:1px solid rgba(213,226,254,1);
}
.container {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.answerimage {
  width: 38px;
  height: 38px;
  margin-right: 10px;
  margin-top: 10px;
}
.text::after{
  width: 100%;
  display: inline-block;
  content: '';
}
.weather-view{
  margin-top: 10px;
  width: 100%;
  height: 193px;
  background-color: #ffffff;
  border-radius: 10px;
}
.top-view{
  width: 100%;
  height: 96px;
  display: flex;
}
.left-view{
  margin-left: 25px;
  width: 50px;
  height: 100%;
  display: flex;
}
.nowTp-txt{
  width: 100%;
  line-height: 96px;
  font-size: 42px;
  font-family:DINAlternate-Bold;
  font-weight:bold;
}
.nowTp-char-txt{
  margin-top: 30px;
  width: 10px;
  font-size: 20px;
  line-height: 20px;
}
.midd-view{
  margin-left: 10px;
  width: 40px;
  height: 100%;
}
.weather-icon{
  margin-top: 28px;
  margin-left: 10px;
  width: 20px;
  height: 20px;
}
.weather-iconImg{
  width: 20px;
  height: 20px;
}
.weather-txt{
  margin-top: 6px;
  width: 40px;
  line-height: 14px;
  font-size: 14px;
  font-family: SFProDisplay-Semibold;
  font-weight: 600;
  color:rgba(102,102,102,1);
  text-align: center;
}
.right-view{
  margin-left: 20px;
  width: calc(100% - 170px);
  height: 100%;
}
.date-time{
  margin-top: 28px;
  width: 100%;
  line-height: 14px;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color:rgba(102,102,102,1);
}
.temperature-txt{
  margin-top: 12px;
  width: 100%;
  line-height: 14px;
  font-size: 14px;
  font-family: SFProDisplay-Semibold;
  font-weight: 600;
  color:rgba(51,51,51,1);
}
.bottom-view{
  display: flex;
  width: 100%;
  height: 96px;
  box-sizing: border-box;
  /* padding: 0px 25px; */
}
.other-weather{
  width: 25%;
  height: 100%;
}
.other-time{
  width: 100%;
  line-height: 13px;
  text-align: center;
  font-size: 13px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  opacity:0.5;
}
.other-weather-txt{
  margin-top: 7px;
  width: 100%;
  line-height: 14px;
  text-align: center;
  font-size: 14px;
  font-family: SFProDisplay-Semibold;
  font-weight: 600;
  color:rgba(51,51,51,1);
}
.other-icon{
  margin-top: 8px;
  width: 100%;
  height: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.other-weather-icon{
  width: 16px;
  height: 16px;
}
.other-temperature{
  margin-top: 10px;
  width: 100%;
  line-height: 13px;
  text-align: center;
  font-size: 13px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  opacity:0.9;
}





.queryBMI {
  height:255px;
  background:rgba(255,255,255,1);
  box-shadow:0px 1px 10px 0px rgba(227,231,237,1);
  border-radius:12px;
  margin: 20px auto 0px;
  width: calc(100vw - 34px);
}
.queryBMI_top{
  padding: 0 24px;
  box-sizing: border-box;
  width: 100%;
  height: 82px;
  background: #74d89f;
  border-radius:12px 12px 0px 0px;
  display: flex;
  justify-content: space-between;
}
.queryBMI_top_img{
  width: 108px;
  height: 100px;
}
.queryBMI_top_content {
  margin-top: 25px;
}
.queryBMI_top_content_title {
  font-size:17px;
  font-family:MicrosoftYaHeiUI-Bold,MicrosoftYaHeiUI;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.queryBMI_top_content_para {
  margin-top: 1px;
  font-size:12px;
  font-family:MicrosoftYaHeiUI;
  color:rgba(255,255,255,1);
}
.queryBMI_bottom {
  margin-top: 5px;
  padding-left: 24px;
  box-sizing: border-box;
}
.queryBMI_bottom_content {
  display: flex;
  align-items: center;
  padding: 14px 0 12px 0;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(227, 231, 237, 0.8);
}

.queryBMI_bottom_content:last-child {
  border-bottom: none;
}
.queryBMI_bottom_content_img_view {
  width:25px;
  height:25px;
  background:#74d89f;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 5px;
}
.queryBMI_bottom_content_img0 {
  width: 7px;
  height: 9px;
}
.queryBMI_bottom_content_img1 {
  width: 8px;
  height: 7px;
}
.queryBMI_bottom_content_img2 {
  width: 7px;
  height: 9px;
}
.queryBMI_bottom_content_description {
  font-size:12px;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(48,49,51,1);
}

.hrefWord {
  font-size: 14px;
  color:#61A9FF;
  margin-top: 5px;
}
